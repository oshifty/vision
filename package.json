{
	"name": "vision",
	"version": "0.1.0",
	"description": "A new and intuitive way of controlling intelligent devices developed from first principles for the event industry.",
	"main": "build/index.js",
	"repository": "git@github.com:oshifty/vision.git",
	"author": "Lukas Runge <login@lukasrunge.de>",
	"license": "MIT",
	"private": false,
	"scripts": {
		"postinstall": "tsx tools/fetchUDR.ts",
		"app": "tsx src/test/main.ts",
		"app:watch": "tsx watch src/test/main.ts",
		"doc:build": "typedoc",
		"doc": "typedoc --watch --preserveWatchOutput & browser-sync start -c browsersync.json",
		"dev": "vite dev",
		"dev:host": "vite dev --host",
		"build": "vite build && node tools/build.js",
		"preview": "node build/entrypoint.js",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@mxssfd/typedoc-theme": "^1.1.2",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.20.4",
		"@types/node": "^20.5.6",
		"@types/polka": "^0.5.4",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"browser-sync": "^2.29.3",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"nodemon": "^3.0.1",
		"polka": "^0.5.2",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tslib": "^2.4.1",
		"tsx": "^3.12.7",
		"typedoc": "^0.24.8",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vitest": "^0.32.2"
	},
	"type": "module",
	"dependencies": {
		"ajv": "^8.12.0",
		"esbuild": "0.19.2",
		"json-schema-to-typescript": "^13.0.2",
		"typescript-json-schema": "^0.60.0"
	}
}
